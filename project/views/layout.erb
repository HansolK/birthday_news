<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hello World</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>
  <div class="banner">
    <i class="menu fas fa-bars fa-2x"></i>
    <h1>Birthday News</h1>
    <div>
      <%if logged_in? %>
      <span><%=current_user.firstname%></span>
      <i style="color: <%= current_user.color %>;"class="user fas fa-user-circle fa-2x"></i>
      <%else%>
      <span>hello, stranger!</span>
      <i class="user fas fa-user-circle fa-2x"></i>
      <%end%>
    </div>
  </div>
  <div class="content_wrapper">
    <div class="menu_list hidden">
      <ul>
        <i class="fas fa-home fa-2x"></i>
        <a href="/"><li>Home</li></a>
        <i class="far fa-question-circle fa-2x"></i>
        <a href="/about"><li>about</li></a>
      </ul>
    </div>
    <%if logged_in? %>
    <div class="user_setting hidden">
      <ul>
        <a href="/user"><li>My profile</li></a>
        <a href="/articles/bookmarks"><li>My Bookmarks</li></a>
        <a href="/user/edit"><li>Edit profile</li></a>
        <a href="/signout"><li>Sign out</li></a>
      </ul>
    </div>
    <%end%>
    <div class="content">
      <%= yield %>
    </div>
  </div>
</body>
  <script src="/javascripts/application.js"></script>
</html>